<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <stroke android:color="@color/seekbar_progress" android:width="1dp"/>
            <gradient
                android:startColor="@color/seekbar_thumb"
                android:centerColor="#B5ECBA"
                android:endColor="@color/seekbar_thumb"
                android:angle="-90" />
            <size android:height="30dp" android:width="10dp"/>
            <corners android:radius="2dp"/>
        </shape>
    </item>
</selector>
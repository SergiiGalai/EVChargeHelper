    <EditTextPreference
        android:defaultValue="220"
        android:inputType="number"
        android:key="default_voltage"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_voltage"/>

    <EditTextPreference
        android:defaultValue="16"
        android:inputType="number"
        android:key="default_amperage"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_amperage"/>

    <EditTextPreference
        android:defaultValue="10.5"
        android:inputType="numberDecimal"
        android:key="battery_capacity"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_battery_capacity"/>

    <EditTextPreference
        android:defaultValue="12"
        android:inputType="number"
        android:key="charging_loss"
        android:maxLines="1"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="@string/pref_title_charging_loss"/>
</PreferenceScreen>
